<div class='post-container'>
    <div class='post-img'>
        <img src='https://i.pinimg.com/originals/73/16/f5/7316f550de9ca0045e3d8d98a5bb5e44.png' alt='post' >
    </div>
    <div class='post-wrapper'>
        <h1> <%= @user.name %> </h1>
        <p> Number of posts: <%= @user.posts_counter %> </p>
    </div>
</div>


<% @posts.each do |post| %>
    <div class='post-comment-wrapper'>
        <%= link_to user_post_path(@user.id, post.id) do %>
            <div class='post-div'>
                <h4> <%= post.title %> </h4>
                <p> <%= post.text %> </p>
            </div>
        <% end %>
        <div class='comment-div'>
        <% post.recent_comments.each do |comment| %>
            <p> <%= comment.author.name %> : <%= comment.text %> </p>
        <% end %>
            
        </div>
    </div>
<% end %>

<div class='button'>
    <button> Paginate </button>
</div>