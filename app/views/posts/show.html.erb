<div class='post-comment-wrapper'>
    <div class='post-div'>
        <h4> <%= @post.title %> </h4>
        <p> <%= @post.text %> </p>
    </div>
    <div class='comment-div'>
        <% @post.comments.each do |comment| %>
        <p> <%= comment.author.name %>: <%= comment.text %> </p>
        <% end %>
    </div>
</div>


<%= form_with url: post_comments_path(@post.id), scope: :data, class: "mb-6" do |form| %>
	<div class="field">
		<%= form.text_area :text, placeholder: "Leave a comment...", rows: 3, required: true, class: "textarea has-fixed-size" %>
	</div>
	<%= form.submit "Submit", class: "button is-success" %>
<% end %>