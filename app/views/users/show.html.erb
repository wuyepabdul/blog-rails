<div class='post-container'>
    <div class='post-img'>
        <img src='https://i.pinimg.com/originals/73/16/f5/7316f550de9ca0045e3d8d98a5bb5e44.png' alt='post' >
    </div>
    <div class='post-wrapper'>
        <h1> <%= @user.name %> </h1>
        <p> Number of posts: <%= @user.posts_counter %> </p>
    </div>
</div>

<div class='bio-div'>
    <h4> Bio</h4>
    <p> <%= @user.bio %> </p>

</div>

<% @posts.each do |post| %>
    <%= link_to user_post_path(@user.id, post.id) do %>
        <div class='post-div'>
            <h2> <%= post.title %> </h2>
            <p> Comments: <%= post.comments_counter.nil? ? '0' : post.comments_counter %> Likes: <%= post.likes_counter.nil? ? '0' : post.likes_counter %> </p>
        </div>
    <% end %>
<% end %>


<div class='button'>
<%= link_to user_posts_path(@user.id) do %>
    <button> See all Posts </button>
<% end %>
</div>